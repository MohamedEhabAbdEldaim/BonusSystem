<?xml version="1.0" encoding="utf-8"?>
<com.chauthai.swipereveallayout.SwipeRevealLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item_user_swipe_reveal_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/d5"
    android:layout_marginTop="@dimen/d3"
    android:layout_marginEnd="@dimen/d5"
    android:background="@null"
    app:dragEdge="left"
    app:mode="same_level">

    <LinearLayout
        android:layout_width="@dimen/d80"
        android:layout_height="@dimen/d80"
        android:layout_margin="@dimen/d4"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/item_user_tv_update"
            android:layout_width="@dimen/d34"
            android:layout_height="@dimen/d34"
            android:layout_margin="@dimen/d4"
            android:background="@drawable/ic_info_circle_solid" />

        <RelativeLayout
            android:id="@+id/item_user_rl_delete"
            android:layout_width="@dimen/d34"
            android:layout_height="@dimen/d34"
            android:layout_gravity="center_vertical">

            <ImageButton
                android:layout_width="@dimen/d34"
                android:layout_height="@dimen/d34"
                android:layout_marginEnd="@dimen/d4"
                android:background="@drawable/shape_circil_orange" />

            <ImageButton
                android:layout_width="@dimen/d24"
                android:layout_height="@dimen/d24"
                android:layout_centerInParent="true"
                android:background="@null"
                android:src="@drawable/ic_delete_black_24dp" />
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/d80"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/item_user_name"
            style="@style/text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2" />

        <TextView
            android:id="@+id/item_user_value"
            style="@style/text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/item_user_bonus"
            style="@style/text_view"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

</com.chauthai.swipereveallayout.SwipeRevealLayout>